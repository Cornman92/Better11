<Application
    x:Class="Better11.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Color Resources -->
            <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
            <SolidColorBrush x:Key="WarningBrush" Color="#FF8C00"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="#E81123"/>
            
            <!-- Font Resources -->
            <x:Double x:Key="TitleFontSize">28</x:Double>
            <x:Double x:Key="SubtitleFontSize">20</x:Double>
            <x:Double x:Key="BodyFontSize">14</x:Double>
            <x:Double x:Key="CaptionFontSize">12</x:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>
