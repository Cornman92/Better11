<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Better11.WinUI.Views.WindowsUpdatesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Spacing="24">
            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock 
                    Text="Windows Updates"
                    Style="{StaticResource TitleLargeTextBlockStyle}"/>
                <TextBlock 
                    Text="Manage Windows Update settings and available updates"
                    Opacity="0.7"
                    Style="{StaticResource BodyTextBlockStyle}"/>
            </StackPanel>

            <!-- Quick Actions -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button 
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,6,0"
                    Command="{x:Bind ViewModel.CheckForUpdatesCommand}">
                    <StackPanel Orientation="Vertical" Padding="12">
                        <FontIcon Glyph="&#xE777;" FontSize="24"/>
                        <TextBlock Text="Check for Updates" Margin="0,8,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button 
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    Margin="6,0,6,0"
                    Command="{x:Bind ViewModel.PauseUpdatesCommand}">
                    <StackPanel Orientation="Vertical" Padding="12">
                        <FontIcon Glyph="&#xE769;" FontSize="24"/>
                        <TextBlock Text="Pause Updates" Margin="0,8,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button 
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    Margin="6,0,0,0"
                    Command="{x:Bind ViewModel.ResumeUpdatesCommand}">
                    <StackPanel Orientation="Vertical" Padding="12">
                        <FontIcon Glyph="&#xE768;" FontSize="24"/>
                        <TextBlock Text="Resume Updates" Margin="0,8,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Update Status -->
            <Border 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                <StackPanel Spacing="12">
                    <TextBlock 
                        Text="Update Status"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>
                    
                    <StackPanel Spacing="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Status:" Width="120" Opacity="0.7"/>
                            <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.UpdateStatus, Mode=OneWay}" FontWeight="SemiBold"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Updates Paused:" Width="120" Opacity="0.7"/>
                            <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.PausedUntil, Mode=OneWay}"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Last Check:" Width="120" Opacity="0.7"/>
                            <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.LastCheckTime, Mode=OneWay}"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Available Updates -->
            <StackPanel Spacing="12">
                <TextBlock 
                    Text="Available Updates"
                    Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <Border 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    MinHeight="200">
                    <ScrollViewer>
                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.AvailableUpdates, Mode=OneWay}">
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <Border 
                                        BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                        BorderThickness="0,0,0,1"
                                        Padding="0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Spacing="4">
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                                <StackPanel Orientation="Horizontal" Spacing="12">
                                                    <Border 
                                                        Background="{StaticResource AccentBrush}"
                                                        CornerRadius="4"
                                                        Padding="6,2">
                                                        <TextBlock Text="{Binding Type}" Foreground="White" FontSize="11"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding SizeMB}" Opacity="0.7" FontSize="12"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <CheckBox Grid.Column="1" IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </ScrollViewer>
                </Border>

                <Button 
                    Content="Install Selected Updates"
                    Command="{x:Bind ViewModel.InstallSelectedCommand}"
                    Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Stretch"
                    Padding="16,12"/>
            </StackPanel>

            <!-- Pause Duration -->
            <StackPanel Spacing="12">
                <TextBlock 
                    Text="Pause Updates"
                    Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <Border 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="16">
                        <Slider 
                            Header="Pause Duration (Days)"
                            Minimum="1"
                            Maximum="35"
                            Value="{x:Bind ViewModel.PauseDurationDays, Mode=TwoWay}"
                            TickFrequency="1"
                            SnapsTo="Ticks"
                            Width="300"
                            HorizontalAlignment="Left"/>

                        <TextBlock>
                            <Run Text="Updates will be paused for"/>
                            <Run Text="{x:Bind ViewModel.PauseDurationDays, Mode=OneWay}" FontWeight="SemiBold"/>
                            <Run Text="days"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Loading Indicator -->
            <ProgressRing 
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                Width="60"
                Height="60"
                HorizontalAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</Page>
