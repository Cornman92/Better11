<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Better11.WinUI.Views.PrivacyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Spacing="24">
            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock 
                    Text="Privacy &amp; Telemetry"
                    Style="{StaticResource TitleLargeTextBlockStyle}"/>
                <TextBlock 
                    Text="Control Windows privacy settings and telemetry"
                    Opacity="0.7"
                    Style="{StaticResource BodyTextBlockStyle}"/>
            </StackPanel>

            <!-- Quick Actions -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button 
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,6,0"
                    Command="{x:Bind ViewModel.ApplyMaximumPrivacyCommand}">
                    <StackPanel Orientation="Vertical" Padding="12">
                        <FontIcon Glyph="&#xE72E;" FontSize="24"/>
                        <TextBlock Text="Maximum Privacy" Margin="0,8,0,0" TextAlignment="Center"/>
                        <TextBlock Text="Most restrictive" FontSize="11" Opacity="0.7" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button 
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    Margin="6,0,6,0"
                    Command="{x:Bind ViewModel.ApplyBalancedCommand}">
                    <StackPanel Orientation="Vertical" Padding="12">
                        <FontIcon Glyph="&#xE81E;" FontSize="24"/>
                        <TextBlock Text="Balanced" Margin="0,8,0,0" TextAlignment="Center"/>
                        <TextBlock Text="Recommended" FontSize="11" Opacity="0.7" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button 
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    Margin="6,0,0,0"
                    Command="{x:Bind ViewModel.ApplyDefaultCommand}">
                    <StackPanel Orientation="Vertical" Padding="12">
                        <FontIcon Glyph="&#xE777;" FontSize="24"/>
                        <TextBlock Text="Default" Margin="0,8,0,0" TextAlignment="Center"/>
                        <TextBlock Text="Windows default" FontSize="11" Opacity="0.7" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Telemetry Settings -->
            <StackPanel Spacing="12">
                <TextBlock 
                    Text="Telemetry &amp; Diagnostics"
                    Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <Border 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="16">
                        <ComboBox 
                            Header="Telemetry Level"
                            SelectedIndex="{x:Bind ViewModel.TelemetryLevelIndex, Mode=TwoWay}"
                            MinWidth="250">
                            <ComboBoxItem Content="Security (Enterprise only)"/>
                            <ComboBoxItem Content="Basic"/>
                            <ComboBoxItem Content="Enhanced"/>
                            <ComboBoxItem Content="Full"/>
                        </ComboBox>

                        <ToggleSwitch 
                            Header="Advertising ID"
                            OnContent="Enabled"
                            OffContent="Disabled"
                            IsOn="{x:Bind ViewModel.AdvertisingIdEnabled, Mode=TwoWay}"/>

                        <ToggleSwitch 
                            Header="Cortana"
                            OnContent="Enabled"
                            OffContent="Disabled"
                            IsOn="{x:Bind ViewModel.CortanaEnabled, Mode=TwoWay}"/>

                        <ToggleSwitch 
                            Header="Windows Error Reporting"
                            OnContent="Enabled"
                            OffContent="Disabled"
                            IsOn="{x:Bind ViewModel.ErrorReportingEnabled, Mode=TwoWay}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- App Permissions -->
            <StackPanel Spacing="12">
                <TextBlock 
                    Text="App Permissions"
                    Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <Border 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="12">
                        <ToggleSwitch Header="Location" IsOn="{x:Bind ViewModel.LocationEnabled, Mode=TwoWay}"/>
                        <ToggleSwitch Header="Camera" IsOn="{x:Bind ViewModel.CameraEnabled, Mode=TwoWay}"/>
                        <ToggleSwitch Header="Microphone" IsOn="{x:Bind ViewModel.MicrophoneEnabled, Mode=TwoWay}"/>
                        <ToggleSwitch Header="Notifications" IsOn="{x:Bind ViewModel.NotificationsEnabled, Mode=TwoWay}"/>
                        <ToggleSwitch Header="Account Info" IsOn="{x:Bind ViewModel.AccountInfoEnabled, Mode=TwoWay}"/>
                        <ToggleSwitch Header="Contacts" IsOn="{x:Bind ViewModel.ContactsEnabled, Mode=TwoWay}"/>
                        <ToggleSwitch Header="Calendar" IsOn="{x:Bind ViewModel.CalendarEnabled, Mode=TwoWay}"/>
                        <ToggleSwitch Header="Background Apps" IsOn="{x:Bind ViewModel.BackgroundAppsEnabled, Mode=TwoWay}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Telemetry Services -->
            <StackPanel Spacing="12">
                <TextBlock 
                    Text="Telemetry Services"
                    Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <InfoBar 
                    Title="Warning"
                    Message="Disabling these services may affect Windows functionality"
                    Severity="Warning"
                    IsOpen="True"
                    IsClosable="False"/>

                <StackPanel Spacing="8">
                    <Button 
                        Content="Disable Telemetry Services"
                        Command="{x:Bind ViewModel.DisableTelemetryServicesCommand}"/>
                    <Button 
                        Content="Enable Telemetry Services"
                        Command="{x:Bind ViewModel.EnableTelemetryServicesCommand}"/>
                </StackPanel>
            </StackPanel>

            <!-- Apply Button -->
            <Button 
                Content="Apply Privacy Settings"
                Style="{StaticResource AccentButtonStyle}"
                Command="{x:Bind ViewModel.ApplySettingsCommand}"
                HorizontalAlignment="Stretch"
                Padding="16,12"/>
        </StackPanel>
    </ScrollViewer>
</Page>
