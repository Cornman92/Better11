<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Better11.WinUI.Views.StartupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Spacing="24">
            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock 
                    Text="Startup Programs"
                    Style="{StaticResource TitleLargeTextBlockStyle}"/>
                <TextBlock 
                    Text="Manage programs that run when Windows starts"
                    Opacity="0.7"
                    Style="{StaticResource BodyTextBlockStyle}"/>
            </StackPanel>

            <!-- Quick Actions -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button 
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,6,0"
                    Command="{x:Bind ViewModel.RefreshCommand}">
                    <StackPanel Orientation="Vertical" Padding="12">
                        <FontIcon Glyph="&#xE72C;" FontSize="24"/>
                        <TextBlock Text="Refresh" Margin="0,8,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button 
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    Margin="6,0,6,0"
                    Command="{x:Bind ViewModel.DisableAllHighImpactCommand}">
                    <StackPanel Orientation="Vertical" Padding="12">
                        <FontIcon Glyph="&#xE74D;" FontSize="24"/>
                        <TextBlock Text="Disable High Impact" Margin="0,8,0,0" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </Button>

                <Button 
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    Margin="6,0,0,0"
                    Command="{x:Bind ViewModel.AnalyzeImpactCommand}">
                    <StackPanel Orientation="Vertical" Padding="12">
                        <FontIcon Glyph="&#xE9D9;" FontSize="24"/>
                        <TextBlock Text="Analyze Impact" Margin="0,8,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Startup Impact Summary -->
            <Border 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Total Programs" FontSize="12" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind ViewModel.TotalPrograms, Mode=OneWay}" FontSize="32" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Enabled" FontSize="12" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind ViewModel.EnabledPrograms, Mode=OneWay}" FontSize="32" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="High Impact" FontSize="12" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind ViewModel.HighImpactPrograms, Mode=OneWay}" FontSize="32" FontWeight="SemiBold" Foreground="#F25022"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Startup Programs List -->
            <StackPanel Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock 
                        Text="Startup Programs"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        VerticalAlignment="Center"/>
                    
                    <ComboBox 
                        SelectedIndex="{x:Bind ViewModel.FilterIndex, Mode=TwoWay}"
                        MinWidth="150">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Enabled Only"/>
                        <ComboBoxItem Content="Disabled Only"/>
                        <ComboBoxItem Content="High Impact"/>
                    </ComboBox>
                </StackPanel>

                <Border 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    MinHeight="400">
                    <ScrollViewer>
                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.StartupPrograms, Mode=OneWay}">
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <Border 
                                        BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                        BorderThickness="0,0,0,1"
                                        Padding="16,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Spacing="4">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Location}" FontSize="12" Opacity="0.7"/>
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <Border 
                                                        Background="{Binding ImpactColor}"
                                                        CornerRadius="4"
                                                        Padding="6,2">
                                                        <TextBlock Text="{Binding Impact}" Foreground="White" FontSize="11"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding Type}" FontSize="12" Opacity="0.7"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <ToggleSwitch 
                                                Grid.Column="1"
                                                IsOn="{Binding IsEnabled, Mode=TwoWay}"
                                                Margin="16,0"/>

                                            <Button 
                                                Grid.Column="2"
                                                Content="Details"
                                                Style="{StaticResource SubtleButtonStyle}"
                                                Command="{Binding ShowDetailsCommand}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </ScrollViewer>
                </Border>
            </StackPanel>

            <!-- Loading Indicator -->
            <ProgressRing 
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                Width="60"
                Height="60"
                HorizontalAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</Page>
