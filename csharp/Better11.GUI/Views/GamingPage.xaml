<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Better11.GUI.Views.GamingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="Page_Loaded">

    <ScrollViewer Padding="20">
        <StackPanel Spacing="16">
            <!-- Header -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="4">
                    <TextBlock Text="Gaming Optimization" Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock Text="Optimize Windows for gaming performance"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- Presets -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Gaming Presets" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Maximum Performance" Style="{StaticResource AccentButtonStyle}" Click="MaxPreset_Click"/>
                        <Button Content="Balanced" Click="BalancedPreset_Click"/>
                        <Button Content="Default" Click="DefaultPreset_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Game Settings -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Game Settings" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Game Mode" FontWeight="SemiBold"/>
                            <TextBlock Text="Optimize system resources for gaming" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="GameModeToggle" Grid.Column="1" Toggled="GameMode_Toggled"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Xbox Game Bar" FontWeight="SemiBold"/>
                            <TextBlock Text="In-game overlay for recording and chat" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="GameBarToggle" Grid.Column="1" Toggled="GameBar_Toggled"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Hardware GPU Scheduling" FontWeight="SemiBold"/>
                            <TextBlock Text="Reduce latency with GPU-based scheduling" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="GPUSchedulingToggle" Grid.Column="1" Toggled="GPUScheduling_Toggled"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Advanced Settings -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Advanced" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Mouse Acceleration" FontWeight="SemiBold"/>
                            <TextBlock Text="Disable for more consistent aim" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="MouseAccelToggle" Grid.Column="1" Toggled="MouseAccel_Toggled"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Nagle's Algorithm" FontWeight="SemiBold"/>
                            <TextBlock Text="Disable for lower network latency" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="NagleToggle" Grid.Column="1" Toggled="Nagle_Toggled"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Power Plan -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Power Plan" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="High Performance" Click="HighPerformance_Click"/>
                        <Button Content="Ultimate Performance" Click="UltimatePerformance_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Status -->
            <ProgressBar x:Name="LoadingBar" IsIndeterminate="True" Visibility="Collapsed"/>
            <TextBlock x:Name="StatusText" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
    </ScrollViewer>
</Page>
