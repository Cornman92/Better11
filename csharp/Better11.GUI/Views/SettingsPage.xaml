<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Better11.GUI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="Page_Loaded">

    <ScrollViewer Padding="20">
        <StackPanel Spacing="16" MaxWidth="800">
            <!-- Header -->
            <TextBlock Text="Settings" Style="{StaticResource TitleTextBlockStyle}"/>

            <!-- About -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="8">
                    <TextBlock Text="About Better11" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock x:Name="VersionText" Text="Version 0.3.0"/>
                    <TextBlock Text="Windows Enhancement Toolkit" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="Â© 2025 Better11. MIT License."
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- General Settings -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="General" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Create Restore Points" FontWeight="SemiBold"/>
                            <TextBlock Text="Automatically create restore points before changes" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="RestorePointsToggle" Grid.Column="1" IsOn="True"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Show Advanced Options" FontWeight="SemiBold"/>
                            <TextBlock Text="Show additional advanced settings" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="AdvancedToggle" Grid.Column="1"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Actions -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Actions" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Save Settings" 
                                Style="{StaticResource AccentButtonStyle}"
                                Click="SaveSettings_Click"/>
                        <Button Content="Reset to Defaults" Click="ResetSettings_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Status -->
            <TextBlock x:Name="StatusText" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
    </ScrollViewer>
</Page>
