<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Better11.GUI.Views.UpdatesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="Page_Loaded">

    <ScrollViewer Padding="20">
        <StackPanel Spacing="16">
            <!-- Header -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="4">
                    <TextBlock Text="Windows Updates" Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock Text="Manage Windows Update settings and history"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- Update Controls -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Update Controls" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Check for Updates" Style="{StaticResource AccentButtonStyle}" Click="CheckUpdates_Click"/>
                        <Button Content="Pause Updates (7 days)" Click="PauseUpdates_Click"/>
                        <Button Content="Resume Updates" Click="ResumeUpdates_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Active Hours -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Active Hours" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="Prevent restarts during these hours"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ComboBox x:Name="StartHourComboBox" Width="100" Header="Start">
                            <ComboBoxItem Content="6:00"/>
                            <ComboBoxItem Content="7:00"/>
                            <ComboBoxItem Content="8:00"/>
                            <ComboBoxItem Content="9:00"/>
                            <ComboBoxItem Content="10:00"/>
                        </ComboBox>
                        <ComboBox x:Name="EndHourComboBox" Width="100" Header="End">
                            <ComboBoxItem Content="17:00"/>
                            <ComboBoxItem Content="18:00"/>
                            <ComboBoxItem Content="19:00"/>
                            <ComboBoxItem Content="20:00"/>
                            <ComboBoxItem Content="21:00"/>
                            <ComboBoxItem Content="22:00"/>
                            <ComboBoxItem Content="23:00"/>
                        </ComboBox>
                        <Button Content="Set" Click="SetActiveHours_Click" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Available Updates -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Available Updates" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <ListView x:Name="UpdatesListView" MaxHeight="200">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding KBNumber}" 
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <TextBlock x:Name="NoUpdatesText" Text="No updates available" Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Status -->
            <ProgressBar x:Name="LoadingBar" IsIndeterminate="True" Visibility="Collapsed"/>
            <TextBlock x:Name="StatusText" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
    </ScrollViewer>
</Page>
