<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Better11.GUI.Views.AppsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="Page_Loaded">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Spacing="4">
                    <TextBlock Text="Apps Management" Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock Text="View and manage installed applications"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Content="Refresh" Click="Refresh_Click"/>
                    <Button x:Name="UninstallButton" Content="Uninstall Selected" 
                            Style="{StaticResource AccentButtonStyle}"
                            Click="Uninstall_Click"
                            IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Apps List -->
        <ListView x:Name="AppsListView" 
                  Grid.Row="1" 
                  Margin="0,16,0,0"
                  SelectionChanged="AppsListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Publisher}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <TextBlock Grid.Column="1" Text="{Binding Version}" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Status -->
        <StackPanel Grid.Row="2" Margin="0,16,0,0">
            <ProgressBar x:Name="LoadingBar" IsIndeterminate="True" Visibility="Collapsed"/>
            <TextBlock x:Name="StatusText" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
    </Grid>
</Page>
