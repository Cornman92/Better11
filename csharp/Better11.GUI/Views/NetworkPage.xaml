<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Better11.GUI.Views.NetworkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="Page_Loaded">

    <ScrollViewer Padding="20">
        <StackPanel Spacing="16">
            <!-- Header -->
            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Spacing="4">
                        <TextBlock Text="Network Configuration" Style="{StaticResource TitleTextBlockStyle}"/>
                        <TextBlock Text="Manage network adapters and troubleshoot connectivity"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock x:Name="ConnectionStatusText" Text="Checking..." VerticalAlignment="Center"/>
                        <Button Content="Test Connection" Click="TestConnection_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Network Adapters -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Network Adapters" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <ListView x:Name="AdaptersListView">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Description}" 
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock>
                                            <Run Text="IP:" FontWeight="SemiBold"/>
                                            <Run Text="{Binding IPAddress}"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="{Binding Status}" 
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Network Tools -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Network Tools" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="Troubleshooting and reset tools"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Flush DNS Cache" Click="FlushDns_Click"/>
                        <Button Content="Reset TCP/IP Stack" Click="ResetTcpIp_Click"/>
                        <Button Content="Reset Winsock" Click="ResetWinsock_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Status -->
            <ProgressBar x:Name="LoadingBar" IsIndeterminate="True" Visibility="Collapsed"/>
            <TextBlock x:Name="StatusText" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
    </ScrollViewer>
</Page>
