<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Better11.GUI.Views.DriversPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="Page_Loaded">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Spacing="4">
                    <TextBlock Text="Driver Management" Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock Text="View and backup installed drivers"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Content="Backup All Drivers" Style="{StaticResource AccentButtonStyle}" Click="BackupDrivers_Click"/>
                    <Button Content="Export List" Click="ExportList_Click"/>
                    <Button Content="Refresh" Click="Refresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Drivers List -->
        <Pivot Grid.Row="1" Margin="0,16,0,0">
            <PivotItem Header="All Drivers">
                <ListView x:Name="DriversListView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding DeviceName}" FontWeight="SemiBold"/>
                                    <TextBlock>
                                        <Run Text="{Binding Manufacturer}"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding DriverVersion}"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DeviceClass}" 
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>
            <PivotItem Header="Driver Issues">
                <ListView x:Name="IssuesListView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding DeviceName}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding ErrorDescription}" 
                                               Foreground="{StaticResource Better11ErrorBrush}"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="{Binding ErrorCode}" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>
        </Pivot>

        <!-- Status -->
        <StackPanel Grid.Row="2" Margin="0,16,0,0">
            <ProgressBar x:Name="LoadingBar" IsIndeterminate="True" Visibility="Collapsed"/>
            <TextBlock x:Name="StatusText" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
    </Grid>
</Page>
