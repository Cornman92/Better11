<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Better11.GUI.Views.PrivacyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="Page_Loaded">

    <ScrollViewer Padding="20">
        <StackPanel Spacing="16">
            <!-- Header -->
            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Spacing="4">
                        <TextBlock Text="Privacy Settings" Style="{StaticResource TitleTextBlockStyle}"/>
                        <TextBlock Text="Control Windows telemetry and privacy options"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                    <Button Grid.Column="1" Content="Apply Recommended" 
                            Style="{StaticResource AccentButtonStyle}"
                            Click="ApplyRecommended_Click"/>
                </Grid>
            </Border>

            <!-- Telemetry Level -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Telemetry Level" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="Control how much diagnostic data Windows sends to Microsoft"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <ComboBox x:Name="TelemetryComboBox" Width="200" SelectionChanged="TelemetryComboBox_SelectionChanged">
                        <ComboBoxItem Content="Security (Enterprise only)" Tag="0"/>
                        <ComboBoxItem Content="Basic" Tag="1"/>
                        <ComboBoxItem Content="Enhanced" Tag="2"/>
                        <ComboBoxItem Content="Full" Tag="3"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Privacy Toggles -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Privacy Options" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Cortana" FontWeight="SemiBold"/>
                            <TextBlock Text="Microsoft's voice assistant" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="CortanaToggle" Grid.Column="1" Toggled="CortanaToggle_Toggled"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Location Services" FontWeight="SemiBold"/>
                            <TextBlock Text="Allow apps to access your location" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="LocationToggle" Grid.Column="1" Toggled="LocationToggle_Toggled"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Advertising ID" FontWeight="SemiBold"/>
                            <TextBlock Text="Personalized ads across apps" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="AdvertisingIdToggle" Grid.Column="1" Toggled="AdvertisingIdToggle_Toggled"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Activity History" FontWeight="SemiBold"/>
                            <TextBlock Text="Track and sync your activity" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="ActivityHistoryToggle" Grid.Column="1"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Status -->
            <ProgressBar x:Name="LoadingBar" IsIndeterminate="True" Visibility="Collapsed"/>
            <TextBlock x:Name="StatusText" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
    </ScrollViewer>
</Page>
