[flake8]
# Keep flake8 practical for this repo; Black is not enforced here.
max-line-length = 120
# Ignore line-length and blank-line whitespace noise; keep real issues (F*, E9*, etc.).
ignore = E501,W293,W503

# `tests/conftest.py` intentionally performs platform/path monkeypatching before
# importing pytest; allow out-of-order import for that file.
per-file-ignores =
    tests/conftest.py:E402
