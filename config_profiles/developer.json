{
  "version": "0.3.0",
  "image": {
    "work_dir": "",
    "mount_dir": "",
    "default_index": 1,
    "auto_optimize": false,
    "compression": "fast"
  },
  "updates": {
    "auto_check": true,
    "auto_download": true,
    "auto_install": false,
    "pause_days": 0,
    "include_drivers": true
  },
  "drivers": {
    "backup_dir": "",
    "auto_backup": true,
    "include_inbox": false,
    "force_unsigned": false
  },
  "packages": {
    "cache_dir": "",
    "preferred_manager": "winget",
    "auto_update": true,
    "verify_signatures": true
  },
  "optimizer": {
    "default_level": "balanced",
    "auto_backup_registry": true,
    "create_restore_point": true,
    "disable_telemetry": false
  },
  "files": {
    "buffer_size": 1048576,
    "use_robocopy": true,
    "secure_delete": false
  },
  "ui": {
    "theme": "default",
    "verbose": true,
    "show_progress": true,
    "confirm_destructive": false
  }
}
