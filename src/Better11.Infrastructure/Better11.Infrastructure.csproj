    <TargetPlatformMinVersion>10.0.19041.0</TargetPlatformMinVersion>
    <LangVersion>12.0</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>Better11.Infrastructure</RootNamespace>
    <AssemblyName>Better11.Infrastructure</AssemblyName>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Authors>Better11 Contributors</Authors>
    <Company>Better11</Company>
    <Product>Better11</Product>
    <Description>Infrastructure layer for Better11 - logging, configuration, data access</Description>
    <Copyright>Copyright Â© 2025 Better11</Copyright>
    <Version>0.1.0</Version>
