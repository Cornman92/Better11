<Page
    x:Class="Better11.App.Views.ImageEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Padding="24,24,24,16" Spacing="8">
            <TextBlock
                Text="Image Editor"
                Style="{StaticResource TitleLargeTextBlockStyle}"/>
            <TextBlock
                Text="Mount and customize Windows images (WIM/ISO/ESD)"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1">
            <Grid Padding="24,0,24,24" RowSpacing="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Image Selection -->
                <StackPanel Grid.Row="0" Spacing="12">
                    <TextBlock
                        Text="Image File"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox
                            Grid.Column="0"
                            Text="{x:Bind ViewModel.ImagePath, Mode=TwoWay}"
                            PlaceholderText="Select a Windows image file (.wim, .iso, .esd)"
                            IsReadOnly="True"/>

                        <Button
                            Grid.Column="1"
                            Content="Browse..."
                            Command="{x:Bind ViewModel.BrowseImageCommand}"/>
                    </Grid>

                    <!-- Image Information -->
                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        MinHeight="100">
                        <ScrollViewer MaxHeight="150">
                            <TextBlock
                                Text="{x:Bind ViewModel.ImageInfo, Mode=OneWay}"
                                TextWrapping="Wrap"
                                IsTextSelectionEnabled="True"/>
                        </ScrollViewer>
                    </Border>

                    <!-- Image Index Selection -->
                    <StackPanel Spacing="8" Visibility="{x:Bind ViewModel.IsImageLoaded, Mode=OneWay}">
                        <TextBlock Text="Image Index"/>
                        <ComboBox
                            ItemsSource="{x:Bind ViewModel.AvailableIndexes, Mode=OneWay}"
                            SelectedItem="{x:Bind ViewModel.SelectedIndex, Mode=TwoWay}"
                            HorizontalAlignment="Stretch"
                            MinWidth="200"/>
                    </StackPanel>
                </StackPanel>

                <!-- Mount Operations -->
                <StackPanel Grid.Row="1" Spacing="12">
                    <TextBlock
                        Text="Mount Operations"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox
                            Grid.Column="0"
                            Text="{x:Bind ViewModel.MountPath, Mode=TwoWay}"
                            PlaceholderText="Mount path"/>

                        <StackPanel
                            Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                Content="Mount"
                                Command="{x:Bind ViewModel.MountImageCommand}"
                                Style="{StaticResource AccentButtonStyle}">
                                <Button.Icon>
                                    <FontIcon Glyph="&#xE8B7;"/>
                                </Button.Icon>
                            </Button>

                            <Button
                                Content="Unmount"
                                Command="{x:Bind ViewModel.UnmountImageCommand}">
                                <Button.Icon>
                                    <FontIcon Glyph="&#xE8BB;"/>
                                </Button.Icon>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Status Indicator -->
                    <InfoBar
                        IsOpen="{x:Bind ViewModel.IsImageMounted, Mode=OneWay}"
                        Severity="Success"
                        Title="Image Mounted"
                        Message="Image is currently mounted and ready for modifications"
                        IsClosable="False"/>
                </StackPanel>

                <!-- Image Modification Operations -->
                <StackPanel Grid.Row="2" Spacing="12">
                    <TextBlock
                        Text="Image Modifications"
                        Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <Grid ColumnSpacing="8" RowSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="0"
                            Command="{x:Bind ViewModel.AddDriversCommand}"
                            HorizontalAlignment="Stretch"
                            Height="80">
                            <StackPanel Spacing="8">
                                <FontIcon Glyph="&#xE8C1;" FontSize="24"/>
                                <TextBlock Text="Add Drivers"/>
                                <TextBlock
                                    Text="Inject drivers into the image"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Button>

                        <Button
                            Grid.Column="1"
                            Command="{x:Bind ViewModel.AddPackagesCommand}"
                            HorizontalAlignment="Stretch"
                            Height="80">
                            <StackPanel Spacing="8">
                                <FontIcon Glyph="&#xE7B8;" FontSize="24"/>
                                <TextBlock Text="Add Packages"/>
                                <TextBlock
                                    Text="Install updates and packages"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>

                <!-- Operation Log -->
                <StackPanel Grid.Row="3" Spacing="12">
                    <Grid>
                        <TextBlock
                            Text="Operation Log"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            HorizontalAlignment="Left"/>

                        <Button
                            Content="Clear Log"
                            Command="{x:Bind ViewModel.ClearLogCommand}"
                            HorizontalAlignment="Right"
                            Style="{StaticResource TextBlockButtonStyle}"/>
                    </Grid>

                    <Border
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        MinHeight="200">
                        <ScrollViewer
                            MaxHeight="300"
                            VerticalScrollBarVisibility="Auto">
                            <TextBlock
                                Text="{x:Bind ViewModel.OperationLog, Mode=OneWay}"
                                FontFamily="Consolas"
                                TextWrapping="Wrap"
                                IsTextSelectionEnabled="True"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Busy Indicator -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="3"
            Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
            Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay}">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="16">
                <ProgressRing
                    IsActive="True"
                    Width="60"
                    Height="60"/>
                <TextBlock
                    Text="Processing..."
                    Style="{StaticResource SubtitleTextBlockStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
