<Page
    x:Class="Better11.App.Views.SystemToolsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Better11.App.ViewModels"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Padding="24,24,24,16" Spacing="8">
            <TextBlock
                Text="System Tools"
                Style="{StaticResource TitleLargeTextBlockStyle}"/>
            <TextBlock
                Text="Manage Windows services, registry, and scheduled tasks"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Main Content -->
        <TabView Grid.Row="1" Padding="24,0,24,24">
            <!-- Services Tab -->
            <TabViewItem Header="Windows Services">
                <Grid RowSpacing="16" Padding="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Services Actions -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8">
                        <Button
                            Content="Refresh"
                            Command="{x:Bind ViewModel.LoadServicesCommand}">
                            <Button.Icon>
                                <FontIcon Glyph="&#xE72C;"/>
                            </Button.Icon>
                        </Button>

                        <Button
                            Content="Start"
                            Command="{x:Bind ViewModel.StartServiceCommand}"
                            Style="{StaticResource AccentButtonStyle}">
                            <Button.Icon>
                                <FontIcon Glyph="&#xE768;"/>
                            </Button.Icon>
                        </Button>

                        <Button
                            Content="Stop"
                            Command="{x:Bind ViewModel.StopServiceCommand}">
                            <Button.Icon>
                                <FontIcon Glyph="&#xE71A;"/>
                            </Button.Icon>
                        </Button>

                        <Button
                            Content="Restart"
                            Command="{x:Bind ViewModel.RestartServiceCommand}">
                            <Button.Icon>
                                <FontIcon Glyph="&#xE72C;"/>
                            </Button.Icon>
                        </Button>
                    </StackPanel>

                    <!-- Services List -->
                    <ListView
                        Grid.Row="1"
                        ItemsSource="{x:Bind ViewModel.Services, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.SelectedService, Mode=TwoWay}"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="viewmodels:WindowsServiceItem">
                                <Grid Padding="8" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <FontIcon
                                        Grid.Column="0"
                                        Glyph="&#xE950;"
                                        FontSize="20"/>

                                    <StackPanel Grid.Column="1" Spacing="2">
                                        <TextBlock
                                            Text="{x:Bind DisplayName}"
                                            Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock
                                            Text="{x:Bind Name}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>

                                    <TextBlock
                                        Grid.Column="2"
                                        Text="{x:Bind Status}"
                                        VerticalAlignment="Center"
                                        Margin="0,0,16,0"/>

                                    <TextBlock
                                        Grid.Column="3"
                                        Text="{x:Bind StartType}"
                                        VerticalAlignment="Center"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Progress -->
                    <ProgressRing
                        Grid.Row="1"
                        IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="60"
                        Height="60"/>
                </Grid>
            </TabViewItem>

            <!-- Registry Tab -->
            <TabViewItem Header="Registry">
                <Grid RowSpacing="16" Padding="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Registry Path -->
                    <StackPanel Grid.Row="0" Spacing="8">
                        <TextBox
                            Header="Registry Path"
                            Text="{x:Bind ViewModel.RegistryPath, Mode=TwoWay}"
                            PlaceholderText="HKEY_LOCAL_MACHINE\SOFTWARE\..."/>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button
                                Content="Read Value"
                                Command="{x:Bind ViewModel.ReadRegistryCommand}"
                                Style="{StaticResource AccentButtonStyle}">
                                <Button.Icon>
                                    <FontIcon Glyph="&#xE8A7;"/>
                                </Button.Icon>
                            </Button>

                            <Button
                                Content="Open Registry Editor"
                                Command="{x:Bind ViewModel.OpenRegistryEditorCommand}">
                                <Button.Icon>
                                    <FontIcon Glyph="&#xE713;"/>
                                </Button.Icon>
                            </Button>

                            <Button
                                Content="Open Event Viewer"
                                Command="{x:Bind ViewModel.OpenEventViewerCommand}">
                                <Button.Icon>
                                    <FontIcon Glyph="&#xE7C3;"/>
                                </Button.Icon>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Registry Value -->
                    <Border
                        Grid.Row="1"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                        <ScrollViewer>
                            <TextBlock
                                Text="{x:Bind ViewModel.RegistryValue, Mode=OneWay}"
                                FontFamily="Consolas"
                                TextWrapping="Wrap"
                                IsTextSelectionEnabled="True"/>
                        </ScrollViewer>
                    </Border>

                    <InfoBar
                        Grid.Row="2"
                        Severity="Warning"
                        IsOpen="True"
                        IsClosable="False"
                        Title="Warning"
                        Message="Editing the registry can cause system instability. Modify only if you know what you're doing."/>
                </Grid>
            </TabViewItem>

            <!-- Scheduled Tasks Tab -->
            <TabViewItem Header="Scheduled Tasks">
                <Grid RowSpacing="16" Padding="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Tasks Actions -->
                    <Button
                        Grid.Row="0"
                        Content="Refresh"
                        Command="{x:Bind ViewModel.LoadTasksCommand}">
                        <Button.Icon>
                            <FontIcon Glyph="&#xE72C;"/>
                        </Button.Icon>
                    </Button>

                    <!-- Tasks List -->
                    <ListView
                        Grid.Row="1"
                        ItemsSource="{x:Bind ViewModel.Tasks, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.SelectedTask, Mode=TwoWay}"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="viewmodels:ScheduledTaskItem">
                                <Grid Padding="8" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <FontIcon
                                        Grid.Column="0"
                                        Glyph="&#xE823;"
                                        FontSize="20"/>

                                    <StackPanel Grid.Column="1" Spacing="2">
                                        <TextBlock
                                            Text="{x:Bind TaskName}"
                                            Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock
                                            Text="{x:Bind TaskPath}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>

                                    <TextBlock
                                        Grid.Column="2"
                                        Text="{x:Bind State}"
                                        VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabViewItem>

            <!-- Operation Log Tab -->
            <TabViewItem Header="Log">
                <Grid RowSpacing="12" Padding="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button
                        Grid.Row="0"
                        Content="Clear Log"
                        Command="{x:Bind ViewModel.ClearLogCommand}"
                        HorizontalAlignment="Right"/>

                    <Border
                        Grid.Row="1"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                        <ScrollViewer>
                            <TextBlock
                                Text="{x:Bind ViewModel.OperationLog, Mode=OneWay}"
                                FontFamily="Consolas"
                                TextWrapping="Wrap"
                                IsTextSelectionEnabled="True"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabViewItem>
        </TabView>
    </Grid>
</Page>
