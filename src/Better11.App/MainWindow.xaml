<Window
    x:Class="Better11.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Better11"
    MinWidth="800"
    MinHeight="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Height="48">
            <StackPanel Orientation="Horizontal" Margin="16,0">
                <TextBlock Text="Better11"
                          Style="{StaticResource TitleTextBlockStyle}"
                          VerticalAlignment="Center"/>
                <TextBlock Text=" - Windows 11 System Enhancer"
                          Style="{StaticResource CaptionTextBlockStyle}"
                          VerticalAlignment="Center"
                          Margin="8,0,0,0"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Padding="24">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <TextBlock Text="Welcome to Better11"
                          Style="{StaticResource TitleLargeTextBlockStyle}"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Version 0.1.0 - Planning Phase"
                          Style="{StaticResource BodyTextBlockStyle}"
                          HorizontalAlignment="Center"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock Text="Foundation implementation in progress..."
                          Style="{StaticResource CaptionTextBlockStyle}"
                          HorizontalAlignment="Center"
                          Margin="0,16,0,0"/>

                <!-- Feature Cards Placeholder -->
                <Grid Margin="0,32,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Image Editor Card -->
                    <Border Grid.Column="0"
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8"
                           Padding="16"
                           Margin="8"
                           Width="200">
                        <StackPanel Spacing="8">
                            <FontIcon Glyph="&#xE8B7;" FontSize="32"/>
                            <TextBlock Text="Image Editor" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBlock Text="Coming soon"
                                      Style="{StaticResource CaptionTextBlockStyle}"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- App Manager Card -->
                    <Border Grid.Column="1"
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8"
                           Padding="16"
                           Margin="8"
                           Width="200">
                        <StackPanel Spacing="8">
                            <FontIcon Glyph="&#xE74C;" FontSize="32"/>
                            <TextBlock Text="App Manager" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBlock Text="Coming soon"
                                      Style="{StaticResource CaptionTextBlockStyle}"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- System Tools Card -->
                    <Border Grid.Column="2"
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="8"
                           Padding="16"
                           Margin="8"
                           Width="200">
                        <StackPanel Spacing="8">
                            <FontIcon Glyph="&#xE713;" FontSize="32"/>
                            <TextBlock Text="System Tools" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBlock Text="Coming soon"
                                      Style="{StaticResource CaptionTextBlockStyle}"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Height="32">
            <TextBlock Text="Ready"
                      Style="{StaticResource CaptionTextBlockStyle}"
                      VerticalAlignment="Center"
                      Margin="16,0"
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </Grid>
    </Grid>
</Window>
