{
  "App": {
    "Name": "Better11",
    "Version": "0.1.0",
    "Theme": "System",
    "Language": "en-US",
    "CheckUpdates": true,
    "StartupCheckForUpdates": false
  },
  "Paths": {
    "Downloads": "%USERPROFILE%\\Downloads\\Better11",
    "Temp": "%TEMP%\\Better11",
    "Logs": "%LOCALAPPDATA%\\Better11\\Logs",
    "Cache": "%LOCALAPPDATA%\\Better11\\Cache",
    "Settings": "%LOCALAPPDATA%\\Better11\\Settings"
  },
  "ImageEditor": {
    "DefaultMountPath": "C:\\Better11\\Mount",
    "AutoCommit": false,
    "MaxConcurrentMounts": 3,
    "AutoUnmountOnExit": true
  },
  "AppManager": {
    "PreferredSource": "winget",
    "AutoUpdate": false,
    "ParallelDownloads": 3,
    "ShowBetaVersions": false,
    "CheckUpdatesInterval": 86400
  },
  "FileOperations": {
    "DefaultDuplicateHashAlgorithm": "SHA256",
    "MinDuplicateSizeBytes": 1024,
    "MaxParallelOperations": 4
  },
  "SystemOptimization": {
    "CreateRestorePointBeforeChanges": true,
    "ConfirmDangerousOperations": true
  },
  "Logging": {
    "MinimumLevel": "Information",
    "RetainedFileCountLimit": 30
  }
}
